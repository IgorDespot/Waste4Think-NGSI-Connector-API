  "paths": {
    "/entities": {
      "get": {
        "tags": [
          "Entities"
        ],
        "summary": "Find all entities",
        "description": "Retruns all entities can recive service and service path",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Fiware-Service",
            "in": "header",
            "description": "Location of entities",
            "required": true,
            "type": "string"
          },
          {
            "name": "Fiware-ServicePath",
            "in": "header",
            "description": "Precise location of entities",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DepositPointType"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Entities"
        ],
        "summary": "Upload file with entitiy info",
        "description": "Create all entities from user supplyed file (.csv, json, text)",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Fiware-Service",
            "in": "header",
            "description": "Location of entities",
            "required": true,
            "type": "string"
          },
          {
            "name": "Fiware-ServicePath",
            "in": "header",
            "description": "Precise location of entities",
            "required": true,
            "type": "string"
          },
          {
            "name": "file",
            "in": "formData",
            "required": true,
            "type": "file"
          }
        ],
        "responses": {
          "201": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DepositPointType"
              }
            }
          }
        }
      }
    },
    "/entities/{entityId}": {
      "get": {
        "tags": [
          "Entities"
        ],
        "summary": "Find entity by ID",
        "description": "Returns single Entity",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "entityId",
            "in": "path",
            "description": "ID of entity to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DepositPointType"
              }
            }
          },
          "404": {
            "description": "Entity not found"
          }
        }
      }
    },
    "/entities/update": {
      "post": {
        "tags": [
          "Entities"
        ],
        "summary": "Update entities from user file",
        "description": "Update enitites from user supplyed file (.csv, json, text)",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Fiware-Service",
            "in": "header",
