            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DepositPointType"
              }
            }
          },
          "404": {
            "description": "Entity not found"
          }
        }
      }
    },
    "/entities/type/{typeId}": {
      "get": {
        "tags": [
          "Entities"
        ],
        "summary": "Find entity by type",
        "description": "Returns single Entity",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "typeId",
            "in": "path",
            "description": "ID of entity to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DepositPointType"
              }
            }
          },
          "404": {
            "description": "Entity not found"
          }
        }
      }
    }
